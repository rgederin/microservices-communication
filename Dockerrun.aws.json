{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "bff-service",
      "image": "rgederin/bff-service:0.0.1-SNAPSHOT",
      "hostname": "bff-service",
      "essential": true,
      "memory": 256,
      "links": [
        "authors-service",
        "books-service"
      ],
      "environment": [
        {
          "name": "AUTHORS_URL",
          "value": "http://authors-service:8081"
        },
        {
          "name": "BOOKS_URL",
          "value": "http://books-service:8082"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8083,
          "containerPort": 8083
        }
      ]
    },
    {
      "name": "authors-service",
      "image": "rgederin/authors-service:0.0.1-SNAPSHOT",
      "hostname": "authors-service",
      "essential": false,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8081,
          "containerPort": 8081
        }
      ]
    },
    {
      "name": "books-service",
      "image": "rgederin/books-service:0.0.1-SNAPSHOT",
      "hostname": "books-service",
      "essential": false,
      "memory": 256,
      "links": [
        "authors-service"
      ],
      "environment": [
        {
          "name": "AUTHORS_URL",
          "value": "http://authors-service:8081"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8082,
          "containerPort": 8082
        }
      ]
    }
  ]
}